<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_height="150dp">


        <TextView
            android:id="@+id/dialog_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/app_setting"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/open_setting_message"
            android:textColor="@android:color/black"
            android:layout_alignTop="@id/dialog_head"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/buttonOk"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/open_setting"
            android:layout_alignBottom="@id/dialog_message"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />


</RelativeLayout>